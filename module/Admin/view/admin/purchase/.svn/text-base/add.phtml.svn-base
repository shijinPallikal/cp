<script type="text/javascript">
    //Status off
    $('.ston').live('click',function()
    {
        var offId = $(this).attr('id'); 
        
        $.ajax({
            type:"POST",
            url:"/admin/rowmaterial/statusOff",
            cache:false,
            data:{ offId:offId },
            dataType:"html",
            success:function(data)
            {
                $("#msg").html(data);
                location.reload();
            }
        });

    });

    //Status On
    $('.stof').live('click',function()
    {
        var onId = $(this).attr('id'); 
        
        $.ajax({
            type:"POST",
            url:"/admin/rowmaterial/statusOn",
            cache:false,
            data:{ onId:onId },
            dataType:"html",
            success:function(data)
            {
                $("#msg").html(data);
                location.reload();
                
            }
        });

    });
    jQuery(function($){
        $("#pdate").mask("99/99/9999");
        $("#expdate").mask("99/99/9999");
        
        $("#pdate").change(function(){
            var date= $("#pdate").val();
            var dates= date.split("/");
            
            if(dates[1] > 13)
            {
                alert("Please enter Correct month");
                $("#pdate").val('');
            }
            if(dates[0] > 32)
            {
                alert("please enter correct date");
                $("#pdate").val('');
            }
        });
        $("#expdate").change(function(){
            var date= $("#expdate").val();
            var dates= date.split("/");
            
            if(dates[1] > 13)
            {
                alert("Please enter Correct month");
                $("#expdate").val('');
            }
            if(dates[0] > 32)
            {
                alert("please enter correct date");
                 $("#expdate").val('');
            }
        });
        

   
    });
</script>
